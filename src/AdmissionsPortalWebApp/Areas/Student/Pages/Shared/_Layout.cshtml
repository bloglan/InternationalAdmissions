@inject IOptions<ProductInfo> Product
@{
    Layout = "/Pages/Shared/_LayoutBase.cshtml";
}

@section header
    {
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">@Product.Value.Title <span class="small">@Localizer["Students"]</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Passports">Passports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Visas">VISA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Index">Permitted</a>
                    </li>
                </ul>
                <partial name="_SelectLanguagePartial" />
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
}

@RenderBody()

@section Heads
    {
        @await RenderSectionAsync("Heads", false)
    }
@section Scripts
    {
        @await RenderSectionAsync("Scripts", false)
    }